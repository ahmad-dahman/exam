{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name}}{% endblock %}

{% block body %}

<section class="articles">

  {% for article in articles %}
    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata">ecrit le {{article.createdAt | date ('d/m/y')}}a {{article.createdAt | date('H:i')}}</div>
        <div class="content"></div>
        <div><img src="{{article.image}}" alt=""></div>
        <div>{{article.content}}</div>
        <div><a href="{{ path ('blog_show',{'id':article.id}) }}" class="btn btn-primary">lire la suite</a></div>
        
     </article>

   {% endfor %}
</section>

{% endblock %}

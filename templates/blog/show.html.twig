{% extends 'base.html.twig'%}
{% block body %}
<article>
<h2>{{article.title}}</h2>
<div class="metadata">Ecrit le {{article.createdAt | date ('d/m/y')}} a {{article.createdAt | date('H:i')}} dans la categorie {{article.category.title}}</div>

<div><img src="{{article.image}}" alt=""></div>

<div class="content"><h4>desciption:</h4>  {{article.content|raw}}</div>
</article>
<section id="commentaires">
{% for comment in article.comments %}
<div class="comment">
<div class ="row">
<div class="col-3">
{{comment.author}} (<small>{{comment.createdAt | date ('d/m/y/ a h:i')}}</small>)
</div>
<div class="col">
{{comment.content | raw}}
</div>
</div>
</div>

{% endfor %}
{% endblock %}